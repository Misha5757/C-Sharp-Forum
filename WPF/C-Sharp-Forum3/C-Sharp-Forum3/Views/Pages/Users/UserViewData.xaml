<Page x:Class="C_Sharp_Forum3.Views.Pages.Users.UserViewData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:C_Sharp_Forum3.Views.Pages.Users"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="UserViewData">

    <!--Основной Grid-->
    <Grid>

        <!--Разбиваем основной Grid на три строки-->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>

        <!--Первая строка основного Grid`да-->
        <Grid Grid.Row="0">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Left">
                
                <Button x:Name="buttonBack"
                        Width="150"
                        Content="Назад"
                        Margin="10,0,0,0"
                        Click="buttonBack_Click"/>
            </StackPanel>
        </Grid>

        <!--Вторая строка основного Grid`да-->
        <Grid Grid.Row="1">
            <DataGrid x:Name="dataView"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="0.2*"/>
                    <DataGridTextColumn Header="CPU" Binding="{Binding Computer.CPU}" Width="*"/>
                    <DataGridTextColumn Header="GPU" Binding="{Binding Computer.GPU}" Width="*"/>
                    <DataGridTextColumn Header="Блок питания" Binding="{Binding Computer.PowerSupply}" Width="*"/>
                    <DataGridTextColumn Header="ОЗУ" Binding="{Binding Computer.RAM}" Width="*"/>
                    <DataGridTextColumn Header="Материнская плата" Binding="{Binding Computer.MotherBoard}" Width="*"/>
                    <DataGridTextColumn Header="Корпус" Binding="{Binding Computer.Housing}" Width="*"/>
                    <DataGridTextColumn Header="Страна производитель" Binding="{Binding CountryManufacture.Title}" Width="*"/>
                    
                    <!--Добавляем в саму DataGrid кнопку 'Редактировать'-->
                    <DataGridTemplateColumn Header="Действие" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="buttonEdit" 
                                        Content="Редактировать"
                                        Margin="10,0,10,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!--Третья строка основнока Grid`да-->
        <Grid Grid.Row="2">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Margin="0,15,0,0">
                
                <Button x:Name="buttonSave"
                        Content="Сохранить"
                        Width="150"
                        Margin="0,0,5,0"/>
                
                <Button x:Name="buttonRemove"
                        Content="Удалить"
                        Width="150"/>
            </StackPanel>
        </Grid>

    </Grid>
</Page>
